<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".quiz.Quiz_alphabets" >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/previous" />
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shape_image"
        android:layout_alignRight="@+id/shape_image"
        android:layout_below="@+id/shape_image"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/shape_hint"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/next_shape"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/editText1"
        android:layout_marginLeft="16dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/editText1"
        android:src="@drawable/next"
        android:background="@null" />

    <ImageView
        android:id="@+id/shape_image"
        android:layout_width="480dp"
        android:layout_height="480dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />
    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:layout_below="@id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#0c64e8"
        android:textSize="35sp" />
    
</RelativeLayout>